{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color":{
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "light-silver",
                    "color": "#eeeeee",
                    "name": "Light Silver"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "tahoma",
                    "name": "Tahoma",
                    "slug": "tahoma"
                },
                {
                    "fontFamily": "arial",
                    "name": "Arial",
                    "slug": "arial"
                }
            ]
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--tahoma)"
        },
        "color": {
            "background": "var(--wp--preset--color--light-silver)",
            "text": "var(--wp--preset--color--black)"
        },
        "elements": {
            "h2": {
                "color": {
                    "text": "var(--wp--preset--color--white)",
                    "background": "var(--wp--preset--color--black)"
                },
                "border": {
                    "radius": "5px"
                },
                "spacing": {
                    "padding": {
                        "top": "10px",
                        "bottom": "10px",
                        "left": "10px",
                        "right": "10px"
                    }
                }
            },
            "link": {
                "color": {
                    "text": "inherit"
                },
                "typography": {
                    "textDecoration": "none"
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "blank",
            "title": "Blank Template",
            "postTypes": [
                "page",
                "post"
            ]
        }
    ]
}